<!doctype html>
<html>
<head>
  <title>Loupe prototype</title>
  <link href="/stylesheets/screen.css" media="screen, projection" rel="stylesheet" type="text/css" />
</head>
<body>

  <canvas width="1024" height="768" id="canvas"></canvas>

  <div class="loupe">
    <div class="loupe__overlay">
      <div class="loupe__sample"></div>
      <p class="loupe__format">CSS Hex</p>
      <p class="loupe__color"></p>
    </div>
  </div>

  <menu class="menu hidden">
    <ul class="menu__history">
      <li class="menu__sample menu__sample_1 active" style="background-color:#f00"></li>
      <li class="menu__sample menu__sample_2" style="background-color:#f55e00"></li>
      <li class="menu__sample menu__sample_3" style="background-color:#279189"></li>
      <li class="menu__sample menu__sample_4" style="background-color:#3377ba"></li>
      <li class="menu__sample menu__sample_5" style="background-color:#000"></li>
      <li class="menu__sample menu__sample_6" style="background-color:#f55e00"></li>
      <i class="menu__sample-overlay"></i>
    </ul>
    <ul class="menu__items">
      <section class="menu__group">
        <li class="menu__item menu__item_1 active">
          <span class="menu__title">Hex</span>
          <span class="menu__subtitle">ff0000</span>
        </li>
        <li class="menu__item menu__item_2">
          <span class="menu__title">RGB</span>
          <span class="menu__subtitle">255,0,0</span>
        </li>
        <li class="menu__item menu__item_3">
          <span class="menu__title">HSL</span>
          <span class="menu__subtitle">360,0,1</span>
        </li>
      </section>
      <section class="menu__group">
        <li class="menu__item menu__item_4">
          <span class="menu__title">CSS Hex</span>
          <span class="menu__subtitle">#ff0000</span>
        </li>
        <li class="menu__item menu__item_5">
          <span class="menu__title">CSS RGB</span>
          <span class="menu__subtitle">rgba(255,0,0,1)</span>
        </li>
        <li class="menu__item menu__item_6">
          <span class="menu__title">CSS HSL</span>
          <span class="menu__subtitle">hsl(360,0,1)</span>
        </li>
      </section>
      <section class="menu__group">
        <li class="menu__item menu__item_7">
          <span class="menu__title">NSColor RGBA</span>
          <span class="menu__subtitle">CalibratedRed: 150/100</span>
        </li>
        <li class="menu__item menu__item_8">
          <span class="menu__title">NSColor HSBA</span>
          <span class="menu__subtitle">DeviceHue: 0.005f</span>
        </li>
        <li class="menu__item menu__item_9">
          <span class="menu__title">UIColor RGBA</span>
          <span class="menu__subtitle">colorWithRed: 150/100</span>
        </li>
        <li class="menu__item menu__item_0">
          <span class="menu__title">UIColor HSBA</span>
          <span class="menu__subtitle">colorWithHue: 0.005f</span>
        </li>
      </section>
      <section class="menu__group">
        <li class="menu__item">
          <span class="menu__title">Modify color...</span>
        </li>
      </section>
    </ul>
  </menu>

  <script src="/components/jquery/jquery.js" type="text/javascript" charset="utf-8"></script>
  <script src="/components/jquery-mousewheel/jquery.mousewheel.js" type="text/javascript" charset="utf-8"></script>

  <script src="/components/underscore/underscore.js" type="text/javascript" charset="utf-8"></script>
  <!-- <script src="/components/keymaster/keymaster.js" type="text/javascript" charset="utf-8"></script> -->
  <script src="/components/jwerty/jwerty.js" type="text/javascript" charset="utf-8"></script>
  <script src="/components/jquery.path/jquery.path.js" type="text/javascript" charset="utf-8"></script>

  <script src="/javascripts/generated/cs.js" type="text/javascript" charset="utf-8"></script>
  <script src="/javascripts/generated/cs.canvas.js" type="text/javascript" charset="utf-8"></script>
  <script src="/javascripts/generated/cs.loupe.js" type="text/javascript" charset="utf-8"></script>
  <script src="/javascripts/generated/cs.overlay.js" type="text/javascript" charset="utf-8"></script>
  <script src="/javascripts/generated/cs.menu.js" type="text/javascript" charset="utf-8"></script>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      window.loupe = new CS.Loupe();
    })
  </script>
  <!-- livereload snippet -->
  <script>document.write('<script src="http://'
   + (location.host || 'localhost').split(':')[0]
   + ':35729/livereload.js?snipver=1"><\/script>')
  </script>
</body>
</html>
